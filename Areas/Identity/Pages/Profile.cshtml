@page
@model ProfileModel
@{
    ViewData["Title"] = "Profile";
}
<h2>Profile</h2>

<div class="row">
    <div class="col-md-8">
        <div class="card shadow-sm mb-3">
            <div class="card-body">
                <p><strong>Display name:</strong> @Model.UserName</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Phone:</strong> @Model.PhoneNumber</p>

                <div class="mt-3">
                    <a class="btn btn-outline-secondary" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">Change password</a>
                    <a class="btn btn-outline-primary" asp-area="Identity" asp-page="/Settings">Account settings</a>
                </div>
            </div>
        </div>

        @if (Model.MyEmployees != null && Model.MyEmployees.Count > 0)
        {
            <div class="card mt-2 shadow-sm">
                <div class="card-header"><strong>Your Employee Record(s)</strong></div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Designation</th>
                                <th class="text-end">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var e in Model.MyEmployees)
                            {
                                <tr>
                                    <td>@e.FullName</td>
                                    <td>@e.Email</td>
                                    <td>@e.Department?.Name</td>
                                    <td>@e.Designation?.Name</td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-info" asp-controller="Employee" asp-action="Details" asp-route-id="@e.Id">Details</a>
                                        <a class="btn btn-sm btn-warning" asp-controller="Employee" asp-action="Update" asp-route-id="@e.Id">Edit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light">Quick Info</div>
            <div class="card-body">
                <p class="mb-1"><strong>Signed in as:</strong> @User.Identity?.Name</p>
                <p class="mb-1"><strong>Manage:</strong></p>
                <ul>
                    <li><a asp-area="Identity" asp-page="/Profile">Profile</a></li>
                    <li><a asp-area="Identity" asp-page="/Settings">Settings</a></li>
                    <li><a asp-area="Identity" asp-page="/Account/Logout">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
