@page
@model LogoutModel

@{
    ViewData["Title"] = "Log out";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="logoutForm" method="post">
                <h2>Are you sure you want to log out?</h2>
                <hr />
                <div class="mb-3">
                    <button id="logout-submit" type="submit" class="w-100 btn btn-lg btn-danger">Log out</button>
                </div>
                <div>
                    <p>
                        <a asp-area="" asp-controller="Home" asp-action="Index">Return to Home</a>
                    </p>
                    <p>
                        <a asp-area="" asp-controller="Employee" asp-action="List">View Employees</a>
                    </p>
                    <p>
                        <a asp-area="Identity" asp-page="/Account/Login">Log in again</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Thank you for using EmployeePortal.</h3>
            <hr />
            <p>
                You have been securely logged out. For your security, always close your browser after logging out, especially on shared devices.
            </p>
            <p>
                Need help? <a href="mailto:support@gmail.com">Contact Support</a>
            </p>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
